<div class="container-fluid">
  <h1 class="page-header"><%=t 'nomination' %></h1>

  <p><%=t 'nominate_message' %></p>

<% if login_user %>
  <%= render 'form' %>
<% else %>
  <p class="alert alert-warning"><%=raw t 'nominate_alert' %></p>
  <p class="lead text-center">
    <%= link_to raw(%'<img width="39" height="32" alt="" src="#{asset_path "Twitter_logo_blue-32px.png"}"> #{t "auth_twitter"}'), '/auth/twitter' %><br>
    <small><%=t 'auth_or' %></small><br>
    <%= link_to raw(%'<img width="32" height="32" alt="" src="#{asset_path "GitHub-Mark-32px.png"}"> #{t "auth_github"}'), '/auth/github' %><br>
  </p>
<% end %>
</div>
